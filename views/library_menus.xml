<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Actions -->
        <record id="action_library_books" model="ir.actions.act_window">
            <field name="name">Books</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{'search_default_available':1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first book!
                </p>
            </field>
        </record>

        <record id="action_library_members" model="ir.actions.act_window">
            <field name="name">Members</field>
            <field name="res_model">library.member</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_library_borrowings" model="ir.actions.act_window">
            <field name="name">Borrowings</field>
            <field name="res_model">library.borrowing</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active':1}</field>
        </record>


           <!-- Quick Borrow Action -->
        <record id="action_quick_borrow_menu" model="ir.actions.act_window">
            <field name="name">Quick Borrow</field>
            <field name="res_model">library.quick.borrow.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="action_library_dashboard" model="ir.actions.act_window">
            <field name="name">Library Dashboard</field>
            <field name="res_model">library.dashboard</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_library_dashboard_form"/>
            <field name="target">current</field>
        </record>

        <!-- Menus -->
        <menuitem id="menu_library_main" name="Library" sequence="10"/>

        <menuitem id="menu_library_dashboard" name="Dashboard"
                  parent="menu_library_main" action="action_library_dashboard" sequence="10"/>

        <menuitem id="menu_library_books" name="Books"
                  parent="menu_library_main" action="action_library_books" sequence="20"/>

        <menuitem id="menu_library_members" name="Members"
                  parent="menu_library_main" action="action_library_members" sequence="30"/>

        <menuitem id="menu_library_borrowings" name="Borrowings"
                  parent="menu_library_main" action="action_library_borrowings" sequence="40"/>

          <!-- Quick Borrow in main menu -->
        <menuitem id="menu_quick_borrow" name="Quick Borrow"
                  parent="menu_library_main" action="action_quick_borrow_menu" sequence="50"/>
    </data>
</odoo>